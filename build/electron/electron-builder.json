{
  "productName": "vmgc",
  "appId": "io.vmxy.vmgc",
  "copyright": "vmxy",
  "directories": {
    "output": "build-app"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://vmxy.github.io/app/vmgc"
    }
  ],
  "files": ["../../dist/**/*"],
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "../../dist/logo.png",
    "artifactName": "${productName}-release-v${version}.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "../../dist/logo.png",
    "artifactName": "${productName}-release-v${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "icon": "../../dist/logo.png"
  }
}
