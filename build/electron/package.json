{
  "name": "tvshow",
  "version": "1.0.0",
  "author": "vmxy",
  "main": "app/electron/electron.js",
  "scripts": {
    "build": "electron-builder"
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron-updater": "^5.3.0",
    "electron": "^25.1.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "productName": "tvshow",
    "appId": "io.vmxy.tvshow",
    "copyright": "vmxy",
    "directories": {
      "output": "build-app"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://ai-peer.github.io/vmgc/apps"
      }
    ],
    "files": [
      "./app/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./app/logo.png",
      "artifactName": "${productName}-v${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./app/logo.png",
      "artifactName": "${productName}-v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "./app/logo.png",
      "artifactName": "${productName}-v${version}.${ext}"
    }
  },
  "license": "none",
  "description": "video app"
}
